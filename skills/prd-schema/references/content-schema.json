{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PRD Content Schema",
  "type": "object",
  "required": ["name", "description", "content"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 50,
      "description": "Feature name, 3-8 words, no jargon"
    },
    "description": {
      "type": "string",
      "maxLength": 100,
      "description": "One-line summary"
    },
    "display_on": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Slack", "Login", "Signup", "Integrations", "Dashboard", "Incidents"]
      },
      "description": "Target areas in the product"
    },
    "content": {
      "type": "object",
      "required": ["problem", "users", "user_stories", "success_criteria"],
      "properties": {
        "problem": {
          "type": "string",
          "maxLength": 500,
          "description": "What's broken, max 3 sentences, no tech"
        },
        "users": {
          "type": "string",
          "description": "Who has this problem"
        },
        "user_stories": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "story", "acceptance"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^US-[0-9]{3}$"
              },
              "story": {
                "type": "string",
                "pattern": "^As a .+, I want .+, so that .+"
              },
              "acceptance": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" },
                "description": "Acceptance criteria for this story"
              },
              "reach": {
                "type": "integer",
                "minimum": 1,
                "description": "Users affected per quarter (RICE)"
              },
              "impact": {
                "type": "number",
                "enum": [3, 2, 1, 0.5, 0.25],
                "description": "3=massive, 2=high, 1=medium, 0.5=low, 0.25=minimal"
              },
              "confidence": {
                "type": "number",
                "enum": [1.0, 0.8, 0.5],
                "description": "1.0=high, 0.8=medium, 0.5=low"
              },
              "effort": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "description": "Person-weeks to implement"
              }
            }
          }
        },
        "constraints": {
          "type": "string",
          "description": "Budget, timeline, compliance limits"
        },
        "out_of_scope": {
          "type": "array",
          "items": { "type": "string" }
        },
        "success_criteria": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" },
          "description": "Measurable outcomes with numbers"
        }
      }
    }
  }
}
